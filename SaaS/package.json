{
  "name": "saas",
  "version": "1.0.0",
  "description": "Đây là website trả lời câu hỏi",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watchJs": "nodemon --watch dist dist/app.js",
    "watchTs": "tsc -w",
    "build-css": "node-sass-chokidar --include-path ./public --include-path ./node_modules public/ -o public/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./public --include-path ./node_modules public/ -o public/ --watch --recursive",
    "start": "npm-run-all --parallel watchTs watchJs watch-css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.0.0-beta",
    "express": "^4.15.4"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.33",
    "jasmine": "^2.8.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3"
  }
}
